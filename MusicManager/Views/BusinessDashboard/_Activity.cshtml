@model List<PlayLift.Models.DashboardSongModel>

<a href="#" onclick="loadView('dashboard-index', '/BusinessDashboard/_Artists/');"><< Back</a>
<h3>@ViewBag.ArtistName</h3>

<table id="songsDashboard" class="display">
    <thead>
        <tr class="songsDashboard-head">
            <td class="album-img"></td>
            <td class="left">
                <div class="column-in">
                    Album
                </div>
            </td>
            <td class="middle">
                <div class="column-in">
                    Song
                </div>
            </td>
            <td class="right">
                <div class="column-in">
                    Play Count
                </div>
            </td>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var song in (List<PlayLift.Models.DashboardSongModel>)Model)
            {
                <tr class="songsDashboard-row">
                    <td class="left">
                        <div class="column-in">
                            <img width="60" src="@PlayLift.PlayLiftBase.StreamingUrl@song.AlbumCollection.FirstOrDefault().AlbumCover"
                                 alt="@song.AlbumCollection.FirstOrDefault().AlbumTitle Album Cover" class="shadow" />
                        </div>
                    </td>
                    <td class="left">
                        <div class="column-in">

                            @song.AlbumCollection.FirstOrDefault().AlbumTitle
                        </div>
                    </td>
                    <td class="middle">
                        <div class="column-in">
                            @song.SongTitle
                        </div>
                    </td>
                    <td class="right">
                        <div class="column-in">
                            @song.TimesPurchased
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function () {
        applyDataTableToDashboard('songsDashboard', false);
    });
</script>