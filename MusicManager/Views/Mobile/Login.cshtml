@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout_Mobile.cshtml";
}

<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css">

@using (Html.BeginForm())
{
    <br /><br />
    <label style="font-family: 'proxima-nova', sans-serif; font-size: 12pt; font-weight: 200; color: rgb(124, 124, 124);">User name</label>
    <br />
    <input id="username" type="text" style="border: solid 1px #c2c2c2; width: 50%;" />
    <br /><br />
    <label style="font-family: 'proxima-nova', sans-serif; font-size: 12pt; font-weight: 200; color: rgb(124, 124, 124);">Password</label>
    <br />
    <input id="password" type="password" style="border: solid 1px #c2c2c2; width: 50%;" />
    <br /><br />
    <button class="btn btn-success">Login</button>
}

