<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Total Resolution Music Ltd</title>
    <link href="~/icon_logo.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/trm/css")
    @Styles.Render("~/Content/mobile/css")
    
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    @Html.Partial("_Fonts")
</head>
<body>
    <div style="align-content: center;">
        <section style="text-align: center; align-content: center; align-items: center;">
            @Html.Partial("_Logo_Mobile")
            @RenderBody()            
        </section>
    </div>

    @RenderSection("scripts", required: false)    
</body>
</html>
