@model DomainModel.Entities.Artist

@if (Model.Active)
{
    <img class="activated" 
         src="~/Content/themes/trm/images/activated.png" 
         alt="Artist is active" 
         title="Artist is active. Click to deactivate artist account" 
         onclick="DeactivateArtist(@Model.UserId);" />
}
else
{
    <img class="deactivated" 
         src="~/Content/themes/trm/images/deactivated.png" 
         alt="Artist is not active" 
         title="Artist is not active. Click to activate artist account" 
         onclick="ActivateArtist(@Model.UserId);" />
}