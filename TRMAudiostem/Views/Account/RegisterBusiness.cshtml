@model TRMAudiostem.Models.BusinessRegisterModel
@{
    ViewBag.Title = "Register";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Create a new account.</h2>
</hgroup>

@using (Html.BeginForm("RegisterBusiness", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset class="registrationForm">
        <legend>Registration Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.Logo)
                <input type="file" name="Logo" />
            </li>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
            <li>
                @Html.LabelFor(m => m.BusinessType)
                @Html.TextBoxFor(m => m.BusinessType)
            </li>
            <li>
                @Html.LabelFor(m => m.Address1)
                @Html.TextBoxFor(m => m.Address1)
            </li>
            <li>
                @Html.LabelFor(m => m.Address2)
                @Html.TextBoxFor(m => m.Address2)
            </li>
            <li>
                @Html.LabelFor(m => m.City)
                @Html.TextBoxFor(m => m.City)
            </li>
            <li>
                @Html.LabelFor(m => m.PostCode)
                @Html.TextBoxFor(m => m.PostCode)
            </li>
            <li>
                @Html.LabelFor(m => m.Country)
                @Html.TextBoxFor(m => m.Country)
            </li>    
            <li>
                @Html.LabelFor(m => m.TermsAndConditions)
                @Html.CheckBoxFor(m => m.TermsAndConditions)
                &nbsp;
                I have read and agree to the @Html.ActionLink("terms and conditions", "TermsAndConditions", "Home", null, new { target= "_blank" }) and @Html.ActionLink("licence of digital content", "BusinessTermsAndConditions", null, new { target= "_blank" }).
            </li>        
        </ol>
        <input type="submit" value="Register" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
